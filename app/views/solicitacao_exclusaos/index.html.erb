<% provide(:current_page, 'Solicitar Exclusão') %>

<div class="row">
  <div class="col-xs-12">
    <div class="box box-primary">





      <table class="table table-striped">
        <thead>
        <tr>
          <th>Nome</th>
          <th>informações</th>
          <th>usuário</th>
          <th>visualizado</th>
          <th colspan="3"></th>
        </tr>
        </tr>
        </thead>

        <tbody>


        <% @solicitacao_exclusaos.each do |solicitacao_exclusao| %>
            <tr>
              <td><%= solicitacao_exclusao.cadastro_id %></td>
              <td><%= solicitacao_exclusao.informacoes %></td>
              <td><%= solicitacao_exclusao.usuario %></td>
              <td><%= solicitacao_exclusao.visualizado %></td>
              <td class="col-xs-1">
                <%= link_to solicitacao_exclusao do %>
                    <i class="fa fa-2x fa-eye"></i>
                <% end %>
              </td>
              <td class="col-xs-1">
                <%= link_to edit_solicitacao_exclusao_path(solicitacao_exclusao) do %>
                    <i class="fa fa-2x fa-edit"></i>
                <% end %>
              </td>
              <td class="col-xs-1">
                <%= link_to solicitacao_exclusao, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?!' } do %>
                    <i class="fa fa-2x fa-trash"></i>
                <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <div class="push-right">

      </div>

    </div>
  </div>
</div>