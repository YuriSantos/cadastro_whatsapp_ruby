<%= render 'shared/errors', object: f.object %>

<div class="row">
  <div class="col-xs-12">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Cadastro de Licitação em Andamento</h3>
            </div>
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Nome'  %>
            </div>

            <div class="form-group">
              <%= f.label :address %>
              <%= f.text_field :address, class: 'form-control', placeholder: 'Endereço'  %>
            </div>

            <div class="form-group">
              <%= f.label :zip_code %>
              <%= f.text_field :zip_code, class: 'form-control', placeholder: 'CEP'  %>
            </div>


            <div class="form-group">
              <%= f.label :parent_id, "OPM Pai" %>
              <%= f.select :parent_id, Opm.all.select {|opm| opm.id != f.object.id}.collect {|opm| [opm.name.titleize, opm.id]}, {include_blank: 'Selecione uma OPM'}, { class: 'form-control' } %>
            </div>
          </div>
        </div>
      </div>
    </div>
