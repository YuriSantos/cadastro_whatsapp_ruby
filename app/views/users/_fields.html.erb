<%= render 'shared/errors', object: f.object %>

<div class="form-group">
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: 'form-control', placeholder: 'Nome'  %>
</div>
<div class="form-group">
  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: 'form-control', placeholder: 'Sobrenome' %>
</div>
<div class="form-group">
  <%= f.label :birth_date, "Data de Nascimento" %>
  <div class="input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy">
      <div class="input-group-addon">
        <i class="fa fa-calendar"></i>
      </div>
      <%= f.text_field :birth_date, class: 'form-control pull-right' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :registration, "Matrícula" %>
  <%= f.text_field :registration, class: 'form-control', placeholder: 'Matrícula'  %>
</div>
<div class="form-group">
  <%= f.label :admission_date, "Data de Admissão" %>
  <div class="input-group date" data-provide="datepicker">
      <div class="input-group-addon">
        <i class="fa fa-calendar"></i>
      </div>
      <%= f.text_field :admission_date, class: 'form-control' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :cpf, "CPF" %>
  <%= f.text_field :cpf, class: 'form-control', placeholder: 'CPF'  %>
</div>
<div class="form-group">
  <%= f.label :email %>
  <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
</div>

<div class="form-group">
  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control', placeholder: 'Senha' %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmar Senha' %>
</div>


<div class="form-group">
  <%= f.label :mobile_phone %>
  <%= f.telephone_field :mobile_phone, class: 'form-control', placeholder: 'Celular' %>
</div>

<%= f.hidden_field 'permission_ids[]', value: [] %>
<%= hidden_field_tag 'permission_ids[]'%>

<div class="form-group">
  <%= f.label "Papeis"%>
  <% Permission.all.each do |permission| %>
  <ul>
    <li>
      <div class="checkbox">
        <label>
          <%= check_box_tag "permission_ids[]", permission.id, user.permissions.include?(permission), id: "user_#{permission.name}"%>
          <%= f.label permission.human_name %>
        </label>
      </div>
    </li>
  </ul>
  <% end %>
</div>
<script>
    $('.input-group.date').datepicker({
    	format: 'dd/mm/yyyy',
    	language: 'pt-BR',
    	todayHighlight: true
    });
</script>
